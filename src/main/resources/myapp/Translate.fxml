        </HBox>
    </ScrollPane>

    <ScrollPane  stylesheets="@Styling.css"  prefWidth="600.0"  vbarPolicy="NEVER" hbarPolicy="NEVER" style="-fx-border-width: 6; -fx-border-color:rgb(7, 17, 17);-fx-border-radius: 10; -fx-background-color: transparent ">
