<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<HBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="myapp.Translate.TranslateBoxController">
