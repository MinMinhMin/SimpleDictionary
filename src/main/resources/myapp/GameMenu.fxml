<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<?import javafx.scene.control.CustomMenuItem?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<ContextMenu xmlns="http://javafx.com/javafx"
             xmlns:fx="http://javafx.com/fxml" fx:controller="myapp.Game.GameMenuController" style="-fx-border-width: 5; -fx-border-color: rgb(18, 19, 20);-fx-border-radius: 10;-fx-background-radius: 10">
  <items>
    <CustomMenuItem  onAction="#handleCrossBoard">
      <content>
        <HBox spacing="20">
          <children>
            <Text text="Cross Board" style="-fx-font-size: 18;-fx-font-weight: 900"/>
          </children>
        </HBox>
      </content>
    </CustomMenuItem>
    <CustomMenuItem onAction="#handleGame2">
      <content>
        <HBox spacing="20">
          <children>
            <Text text="Game 2"  style="-fx-font-size: 18;-fx-font-weight: 900"/>

          </children>
        </HBox>
      </content>
    </CustomMenuItem>
    <SeparatorMenuItem/>
  </items>
</ContextMenu>